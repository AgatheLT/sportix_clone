rails<div class="container py-2">
  <div class="row">
    <div class="row justify-content-center">
      <h1>Hello <%= @user.email %></h1>
    </div>
  </div>
</div>

<div class="container py-2">
  <div class="row">
    <div class="col-4 container">
      <div class="row justify-content-center" id="container_img">
        <div class="avatar rounded-pill">
          <%= image_tag "https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1868&q=80"%>
        </div>
        </div>
          <div class="row justify-content-center">
            <p><%= @user.email %></p>
          </div>
          <div class="row justify-content-center">
            <div class="btn-group-vertical">
              <button type="button" class="btn btn-outline-info m-2"><%= link_to "Create a session", new_sport_session_path %></button>
              <button class="btn btn-outline-info m-2"><%= link_to "Book a class", sport_sessions_path %></button>
            </div>
          </div>
    </div>

    <div class="col-8 p-7">
      <h3>My sessions:</h3>
      <ul>
        <% if @user.sport_sessions == [] %>
        <p>you don't have any sessions</p>
       <% else %>
        <% @user.sport_sessions.each do |sport_session| %>
          <li>sport: <%= sport_session.sport %></li>
          <li>title: <%= sport_session.title %></li>
          <li>description: <%= sport_session.description %></li>
          <li>location: <%= sport_session.location %></li>
          <li>start time: <%= sport_session.start_time %></li>
          <li>duration: <%= sport_session.duration %></li>
          <li>price: <%= sport_session.price %></li>
          <li>capacity: <%= sport_session.capacity %></li>
          <li>rating: <%= sport_session.rating %></li>
          <br>
          <%= link_to sport_session_path(sport_session), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_dose"></i>
          <% end %>
        <% end %>
      <% end %>
      </ul>

      <h3>My bookings:</h3>
        <% if @user.bookings == [] %>
          <p>you don't have any bookings</p>
        <% else %>
        <% @user.bookings.each do |booking| %>
          <div class="card p-2 m-2">
            <div class="card-body d-flex justify-content-between">
              <p><%= booking.booking_date.strftime('%m/%d/%Y') %></p>
              <div class="d-flex flex-column bd-highlight border-right border-left pr-2 pl-2">
                <div class="bd-highlight"><p><%= booking.sport_session.title %></p></div>
                <div class="bd-highlight"><p>Teacher: <%= booking.sport_session.user.email %></p></div>
              </div>
              <p><%= booking.sport_session.location.first(8) %>, CDMX</p>
            <br>
            <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
           </div>
          </div>
        <% end %>
        <% end %>
        <% end %>
    </div>
  </div>
</div>




