<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="d-flex flex-column bd-highlight justify-content-center mb-3">
        <div class="p-2 bd-highlight"><h1>Hello <%= @user.first_name %></h1></div>
        <div class="p-2 bd-highlight rounded-pill">
          <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1868&q=80" class="rounded-pill" alt="...">
        </div>
        <div class="p-2 bd-highlight">
          <div class="btn-group-vertical">
            <%= link_to "Create a session", new_sport_session_path, class: "custombtn btn mb-2" %>
            <%= link_to "Book a class", sport_sessions_path, class: "custombtn btn" %>
          </div>
        </div>
      </div>

    </div>
    <div class="col-sm-8">
      <div class="">
        <h3>My sessions:</h3><br>
          <% if @user.sport_sessions == [] %>
          <p>Looks like you haven’t create any classes yet<br>
          Ready to give one?</p>
         <% else %>
          <% @user.sport_sessions.each do |sport_session| %>
          <div class="card p-2">
            <div class="card-body d-flex justify-content-between">
              <p><%= sport_session.start_time %></p>
              <div class="d-flex flex-column bd-highlight border-right pr-2 pl-2">
                <div class="bd-highlight"><p><%= sport_session.title %></p></div>
                <div class="bd-highlight"><p><%= sport_session.capacity %></p></div>
                <div class="bd-highlight"><p><%= sport_session.price %></p></div>
              </div>
            <br>
            <%= link_to sport_session_path(sport_session), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
          </div>
          <% end %>
        <% end %>
      </div>

      <div class="">
        <h3>My bookings:</h3><br>
        <% if @user.bookings == [] %>
          <p>Looks like you haven’t booked any classes yet.<br>
          Ready to find one?</p>
        <% else %>
        <% @user.bookings.each do |booking| %>
          <div class="card p-2">
            <div class="card-body d-flex justify-content-between">
              <p><strong><%= booking.booking_date.strftime('%d %b')%></strong></p>
              <p><%= booking.booking_date.strftime('%Y') %></p>
              <div class="d-flex flex-column bd-highlight border-right pr-2 pl-2">
                <div class="bd-highlight"><p><%= booking.sport_session.title %></p></div>
                <div class="bd-highlight"><p>With: <%= booking.sport_session.user.first_name %></p></div>
              </div>
              <p><%= booking.sport_session.location%></p>
            <br>
            <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
           </div>
          </div>
        <% end %>
        <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
